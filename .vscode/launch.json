{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Strapi",
        "program": "${workspaceFolder}/node_modules/@strapi/strapi/bin/strapi.js",
        "args": ["develop"],
        "runtimeArgs": ["--inspect-brk=9229"],
        "restart": true,
        "console": "integratedTerminal",
